<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/survey_title_ox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:hint="2. 다시 행사를 개최한다면 주말이었으면 좋겠다."
        android:lineSpacingExtra="3sp"
        android:textColor="#172434"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/background_rectangle_light_black_white_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/survey_create_yes"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/background_rectangle_light_black_black_content"
            android:gravity="center"
            android:lineSpacingExtra="15sp"
            android:text="그렇다"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/survey_create_no"
            android:layout_width="120dp"

            android:layout_height="48dp"
            android:layout_marginLeft="34dp"
            android:background="@drawable/background_rectangle_light_black_white_content"
            android:gravity="center"
            android:lineSpacingExtra="18sp"
            android:text="아니다"
            android:textColor="#172434"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>