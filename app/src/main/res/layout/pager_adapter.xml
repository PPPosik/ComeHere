<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200.9dp"
        android:src="@drawable/detail_sample"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="318.5dp"
        android:background="#cadffa" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingLeft="38.4dp"
            android:paddingRight="38.4dp" >

            <TextView
                android:id="@+id/contextText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="37.6dp"
                android:singleLine="false"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:lineSpacingExtra="10sp"
                android:text=" 해커해커톤은 해커톤에서 발생하는 문제를 개선하기 위한 해커톤으로 기존의 해커톤과는 다른 방식의 해커톤을 개최하기 위한 해커톤 입니다. 해커톤을 운영하는 팀인 만지는 지난 2년간 한국에서 열리는 24개의 해커톤에 참여해 해커톤"
                />

            <TextView
                android:id="@+id/questName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="37.6dp"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textColor="@color/colorPrimary"
                android:lineSpacingExtra="2sp"
                android:text="해커 해커톤 ; 해커톤을 혁신하라"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/requestPersonId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34.8dp"
                    android:textSize="13sp"
                    android:textColor="#2f4663"
                    android:lineSpacingExtra="3sp"
                    android:text="주최자 이민규(만지)"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!--<ImageView-->
                    <!--android:id="@+id/dialog_button"-->
                    <!--android:layout_marginTop="12.2dp"-->
                    <!--android:layout_width="40dp"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:gravity="right|top"-->
                    <!--android:src="@mipmap/dialog_assign" />-->

                <ImageView
                    android:id="@+id/dialog_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="12.2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_add_circle_light_black_24dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>