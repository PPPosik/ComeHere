<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="83dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_board_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="15.1dp"
        android:layout_marginTop="21.2dp"
        android:lineSpacingExtra="4sp"
        android:text="참가자 필독"
        android:textColor="#172434"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_board_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_board_title"
        android:layout_marginBottom="7.8dp"
        android:layout_marginLeft="15.1dp"
        android:lineSpacingExtra="3sp"
        android:text="장원준(운영자)"
        android:textColor="#172434"
        android:textSize="13sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="10.9dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_thumb_up_light_black_24dp" />

        <TextView
            android:id="@+id/item_board_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3sp"
            android:textColor="#172434"
            android:textSize="13sp"
            tools:text="120" />


    </LinearLayout>

</RelativeLayout>